{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build active file",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/a.out"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"]
        }
    ]
}
